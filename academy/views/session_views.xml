<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Form view -->

    <record model="ir.ui.view" id="session_view_form">
        <field name="name">academy.session.form</field>
        <field name="model">academy.session</field>
        <field name="arch" type="xml">
            <form string="Session Form">
                <sheet string="Session">
                    <h1><field name="name" placeholder="ej. Curso de ProgramaciÃ³n"/></h1>
                    <group>
                        <group>                            
                            <field name="course_id"/>
                            <field name="instructor_id"/>
                        </group>
                        <group>
                            <field name="start_date"/>
                            <field name="end_date"/>
                            <field name="duration"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Estudiantes">
                            <field name="student_ids"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="session_view_tree">
        <field name="name">academy.session.tree</field>
        <field name="model">academy.session</field>
        <field name="arch" type="xml">
            <tree string="Session Tree">
                <field name="name"/>
                <field name="instructor_id"/>
            </tree>
        </field>
    </record>

    <record model="ir.ui.view" id="session_view_search">
        <field name="name">academy.session.search</field>
        <field name="model">academy.session</field>
        <field name="arch" type="xml">
            <search string="Session">
                <field name="name"/>
                <field name="instructor_id"/>
            </search>
        </field>
    </record>

    <!-- Calendar View -->
    <record model="ir.ui.view" id="session_view_calendar">
        <field name="name">academy.session.calendar</field>
        <field name="model">academy.session</field>
        <field name="arch" type="xml">
            <calendar 
                string="Session Calendar"
                date_start="start_date"
                date_stop="end_date"
                color="instructor_id"
                mode="month"
            >
                <field name="name"/>
                <field name="instructor_id"/>
            </calendar>
        </field>
    </record>

</odoo>