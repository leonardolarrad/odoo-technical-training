<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Course Action -->

        <record model="ir.actions.act_window" id="course_list_action">
            <field name="name">Cursos</field>
            <field name="res_model">academy.course</field>
            <field name="view_mode">tree,form,pivot</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No hay cursos publicados.
                </p>
            </field>
        </record>

        <!-- Session Action -->

        <record model="ir.actions.act_window" id="session_list_action">
            <field name="name">Sesiones</field>
            <field name="res_model">academy.session</field>
            <field name="view_mode">tree,form,calendar</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No hay sesiones publicadas.
                </p>
            </field>
        </record>

        <!-- Menu Items -->

        <menuitem 
            id="menu_academy" 
            name="Academia" 
            sequence="1"
            web_icon="academy,static/description/icon.png"
        />

        <menuitem 
            id="menu_academy_sub" 
            name="Academia" 
            parent="menu_academy" 
            sequence="2"
        />

        <menuitem 
            id="menu_academy_courses" 
            name="Cursos" 
            parent="menu_academy_sub" 
            action="course_list_action" 
            sequence="3"
        /> 

        <menuitem 
            id="menu_academy_sessions" 
            name="Sesiones" 
            parent="menu_academy_sub" 
            action="session_list_action" 
            sequence="4"
        />        
    </data>
</odoo>