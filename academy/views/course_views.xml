<?xml version="1.0" encoding="UTF-8" ?>
<odoo>      
    <data>
        <!-- Form view -->
        <record id="course_view_form" model="ir.ui.view">
            <field name="name">academy.course.form</field>
            <field name="model">academy.course</field>
            <field name="arch" type="xml">
                <form string="Course Form">
                    <sheet string="Course">
                        <h1><field name="name" placeholder="ej. Curso de Programación"/></h1>
                        <group>
                            <group>
                                <field name="active"/>
                                <field name="level" placeholder="nivel de dificultad"/>
                            </group>
                            <group>
                                <field name="base_price" placeholder="precio base del curso"/>
                                <field name="additional_fee" placeholder="comisión adicional"/>
                                <field name="total_price" force_save="1"/>
                            </group> 
                        </group>
                        <notebook>
                            <page string="Descripción">
                                <field name="description"/>
                            </page>
                            <page string="Sesiones">
                                <field name="session_ids"/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Tree view -->
        <record id="course_view_tree" model="ir.ui.view">
            <field name="name">academy.course.tree</field>
            <field name="model">academy.course</field>
            <field name="arch" type="xml">
                <tree string="Course Tree">
                    <field name="name"/>
                    <field name="description"/>
                    <field name="level"/>
                </tree>
            </field>
        </record>

        <!-- Search view -->
        <record id="course_view_search" model="ir.ui.view">
            <field name="name">academy.course.search</field>
            <field name="model">academy.course</field>
            <field name="arch" type="xml">
                <search string="Course">
                    <field name="name"/>
                    <field name="description"/>
                    <field name="level"/>
                </search>
            </field>
        </record>

        <!-- Pivot View -->
        <record id="course_view_pivot" model="ir.ui.view">
            <field name="name">academy.course.pivot</field>
            <field name="model">academy.course</field>
            <field name="arch" type="xml">
                <pivot string="Course Pivot">
                    <field name="name" type="row"/>
                    <field name="description" type="row"/>
                    <field name="level" type="row"/>
                    <field name="base_price" type="measure"/>
                    <field name="additional_fee" type="measure"/>
                    <field name="total_price" type="measure"/>
                </pivot>
            </field>
        </record>

    </data>    
</odoo>