<?xml version="1.0" encoding="UTF-8" ?>
<odoo>      
    <data>
        <!-- Form view -->
        <record id="course_view_form" model="ir.ui.view">
            <field name="name">academy.course.form</field>
            <field name="model">academy.course</field>
            <field name="arch" type="xml">
                <form string="Course Form">
                    <sheet string="Course">
                        <h1><field name="name"/></h1>
                        <group>
                            <group>
                                <field name="active"/>
                                <field name="level"/>
                            </group>
                            <group>
                                <field name="base_price"/>
                                <field name="additional_fee"/>
                                <field name="total_price" force_save="1"/>
                            </group> 
                        </group>
                        <notebook>
                            <page string="DescripciÃ³n">
                                <field name="description"/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Tree view -->
        <record id="course_view_tree" model="ir.ui.view">
            <field name="name">academy.course.tree</field>
            <field name="model">academy.course</field>
            <field name="arch" type="xml">
                <tree string="Course Tree">
                    <field name="name"/>
                    <field name="description"/>
                    <field name="level"/>
                </tree>
            </field>
        </record>

        <!-- Search view -->
        <record id="course_view_search" model="ir.ui.view">
            <field name="name">academy.course.search</field>
            <field name="model">academy.course</field>
            <field name="arch" type="xml">
                <search string="Course">
                    <field name="name"/>
                    <field name="description"/>
                    <field name="level"/>
                </search>
            </field>
        </record>

    </data>    
</odoo>