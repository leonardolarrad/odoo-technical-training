<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.actions.act_window" id="spaceship_list_action">
            <field name="name">Spaceships</field>
            <field name="res_model">space_mission.spaceship</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No spaceships available
                </p>
            </field>
        </record>

        <record model="ir.actions.act_window" id="mission_list_action">
            <field name="name">Space Missions</field>
            <field name="res_model">space_mission.mission</field>
            <field name="view_mode">tree,form,graph,calendar</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No missions available
                </p>
            </field>
        </record>

        <menuitem 
            id="menu_space_mission" 
            name="Space Mission"
            sequence="1"
            web_icon="space_mission,static/description/icon.png"
        />

        <menuitem 
            id="menu_space_mission_spaceship" 
            name="Spaceships" 
            parent="menu_space_mission" 
            action="spaceship_list_action" 
            sequence="2"
        />                

        <menuitem 
            id="menu_space_mission_mission" 
            name="Missions" 
            parent="menu_space_mission" 
            action="mission_list_action" 
            sequence="3"
        />
    </data>
</odoo>