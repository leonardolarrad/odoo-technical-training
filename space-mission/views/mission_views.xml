<?xml version="1.0" encoding="UTF-8" ?>
<odoo>      
    <data>
        <!-- Form view -->
        <record id="mission_view_form" model="ir.ui.view">
            <field name="name">space_mission.mission.form</field>
            <field name="model">space_mission.mission</field>
            <field name="arch" type="xml">
                <form string="Mission Form">
                    <sheet string="Mission">
                        <h1><field name="name"/></h1>
                        <group>
                            <group>
                                <field name="spaceship_id"/>
                                <field name="commander_id"/>
                            </group>
                            <group>
                                <field name="launch_date"/>
                                <field name="arrival_date"/>
                                <field name="fuel_consumption"/>
                                <field name="cost"/>
                                <field name="currency_id" invisible="1"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="TripulaciÃ³n">
                                <field name="crew_ids"/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Tree view -->
        <record id="mission_view_tree" model="ir.ui.view">
            <field name="name">space_mission.mission.tree</field>
            <field name="model">space_mission.mission</field>
            <field name="arch" type="xml">
                <tree string="Mission Tree">
                    <field name="name"/>
                    <field name="commander_id"/>
                </tree>
            </field>
        </record>

        <!-- Search view -->
        <record id="mission_view_search" model="ir.ui.view">
            <field name="name">space_mission.mission.search</field>
            <field name="model">space_mission.mission</field>
            <field name="arch" type="xml">
                <search string="Mission">
                    <field name="name"/>
                    <field name="spaceship_id"/>
                    <field name="commander_id"/>
                </search>
            </field>
        </record>

        <!-- Graph View -->
        <record id="mission_view_graph" model="ir.ui.view">
            <field name="name">space_mission.mission.graph</field>
            <field name="model">space_mission.mission</field>
            <field name="arch" type="xml">
                <graph 
                    string="Mission Graph"
                >
                    <field name="name"/>
                    <field name="cost"/>
                </graph>
            </field>
        </record>

        <!-- Calendar View -->
        <record id="mission_view_calendar" model="ir.ui.view">
            <field name="name">space_mission.mission.calendar</field>
            <field name="model">space_mission.mission</field>
            <field name="arch" type="xml">
                <calendar 
                    string="Mission Calendar"
                    date_start="launch_date"
                    date_stop="arrival_date"
                >
                    <field name="name"/>
                    <field name="commander_id"/>
                </calendar>
            </field>

    </data>    
</odoo>