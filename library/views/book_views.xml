<?xml version="1.0" encoding="UTF-8" ?>
<odoo>      
    <data>
        <!-- Form view -->
        <record id="book_view_form" model="ir.ui.view">
            <field name="name">academy.book.form</field>
            <field name="model">academy.book</field>
            <field name="arch" type="xml">
                <form string="Book Form">
                    <sheet string="Book">
                        <h1><field name="name"/></h1>
                        <group>
                            <group>
                                <field name="isbn"/>
                                <field name="release_date"/>
                            </group>
                            <group>
                                <field name="author"/>
                                <field name="genre"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="DescripciÃ³n">
                                <field name="description"/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Tree view -->
        <record id="book_view_tree" model="ir.ui.view">
            <field name="name">academy.book.tree</field>
            <field name="model">academy.book</field>
            <field name="arch" type="xml">
                <tree string="Book Tree">
                    <field name="name"/>
                    <field name="isbn"/>
                    <field name="author"/>
                    <field name="genre"/>
                    <field name="release_date"/>
                </tree>
            </field>
        </record>

        <!-- Search view -->
        <record id="book_view_search" model="ir.ui.view">
            <field name="name">academy.book.search</field>
            <field name="model">academy.book</field>
            <field name="arch" type="xml">
                <search string="Book">
                    <field name="name"/>
                    <field name="isbn"/>
                    <field name="description"/>
                    <field name="author"/>
                    <field name="genre"/>
                    <field name="release_date"/>
                </search>
            </field>
        </record>

    </data>    
</odoo>